@Article{zaffalon2012ijar,
  author =       "Marco Zaffalon and Giorgio Corani and Denis Deratani
                 Mau\'a",
  abstract =     "Predictions made by imprecise-probability models are
                 often indeterminate (that is, set-valued). Measuring
