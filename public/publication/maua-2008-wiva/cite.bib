management,trust managment},
 pages = {10},
 title = {Using Social Data to Predict Trust on Web Communities
: A Case Study with the Epinions.com Website},
 url = {http://www.poli.usp.br/p/fabio.cozman/Publications/Article/maua-cozman-wiva2008.pdf},
 year = {2008}
